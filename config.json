{
  "name": "Capacity",
  "version": "1.5.2",
  "css_compiler": "scss",
  "autoprefixer_cascade": true,
  "autoprefixer_browsers": [
    "last 3 versions"
  ],
  "meta": {
    "price": 17000,
    "documentation_url": "https://www.pixelunion.net/support/capacity-theme-manual/",
    "author_name": "Pixel Union",
    "author_email": "support@pixelunion.net",
    "author_support_url": "https://www.pixelunion.net/support/",
    "composed_image": "capacity-composed.png",
    "features": [
      "fully_responsive",
      "mega_navigation",
      "masonry_design",
      "quick_add_to_cart",
      "switchable_product_view",
      "product_comparison_table",
      "complex_search_filtering",
      "customizable_product_selector",
      "cart_suggested_products",
      "free_customer_support",
      "free_theme_upgrades",
      "high_res_product_images",
      "product_filtering",
      "advanced_quick_view",
      "product_showcase",
      "persistent_cart",
      "one_page_check_out",
      "product_videos"
    ]
  },
  "jspm": {
    "dev": {
      "dep_location": "assets/js/dependency-bundle.js",
      "bootstrap": "js/**/* - [js/**/*]"
    },
    "bootstrap": "js/app",
    "bundle_location": "assets/js/bundle.js",
    "jspm_packages_path": "assets/jspm_packages"
  },
  "resources": {
    "cart": true,
    "brands": true
  },
  "settings": {
    "primary-font": "Google_Karla_400,700",
    "secondary-font": "Google_PT+Sans_400,700",
    "main_navigation_font": "primary",
    "footer_navigation_font": "primary",
    "price_font": "primary",
    "button_font": "primary",
    "body_color": "#666666",
    "header_color": "#ffffff",
    "primary_color": "#000000",
    "primary_button_background_color": "#000000",
    "navigation_color": "#222222",
    "accent_color": "#777777",
    "border_color": "#f2f2f2",
    "input_color": "#555555",
    "input_background_color": "#f0f0f0",
    "input_border_color": "#f0f0f0",
    "select_border_color": "#e6e6e6",
    "page_background_color": "#edece8",
    "banner_background_color": "#111111",
    "banner_link_color": "#777777",
    "footer_background_color": "#ffffff",
    "footer_color": "#666666",
    "heading_color": "#333333",
    "section_title_color": "#555555",
    "highlight_color": "ce3834",
