    "mosaic_button_background": "#666666",
    "show_quickshop": true,
    "brands_images": false,
    "brands_footer": true,
    "brands_cap": 5,
    "product_count": 12,
    "theme_credits": true,
    "sitemap": true,
    "payment_visa": true,
    "payment_mastercard": true,
    "payment_american_express": true,
    "payment_discover": false,
    "payment_paypal": true,
    "payment_apple_pay": true,
    "show_pages": true,
    "category_display": "show_categories_dropdown",
